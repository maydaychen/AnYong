<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.wshoto.user.anyong.ui.activity.ConfirmActivity">

    <RelativeLayout
        android:id="@+id/rl_confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title">

        <TextView
            android:id="@+id/iv_comfirm_back"
            style="@style/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/back"
            android:drawablePadding="@dimen/margin_size_8dp"
            android:text="@string/back"
            android:textColor="@color/white" />

        <TextView
            style="@style/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_friend" />
    </RelativeLayout>

    <com.wshoto.user.anyong.ui.widget.DrawableCenterButton
        android:id="@+id/bt_goods_detail_enter_supplier"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/boder_select"
        android:drawableLeft="@drawable/ss"
        android:drawablePadding="@dimen/margin_size_8dp"
        android:gravity="left|center_vertical"
        android:text="@string/new_friend_info"
        android:textColor="@color/font_colour_99" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_new_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
