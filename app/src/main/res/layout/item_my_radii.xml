<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:gravity="center_vertical"
    android:weightSum="5">

    <LinearLayout
        android:id="@+id/ll_item_friend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingTop="@dimen/margin_size_8dp"
        android:paddingBottom="@dimen/margin_size_8dp"
        android:textColor="@color/white">

        <ImageView
            android:id="@+id/iv_radii_brand"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_8dp"
            android:src="@drawable/brand_1" />

        <TextView
            android:id="@+id/tv_radii_brand"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/white"
            android:visibility="gone" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/iv_radii_logo"
            android:layout_width="@dimen/margin_size_28dp"
            android:layout_height="@dimen/margin_size_28dp"
            android:src="@drawable/hzltx" />

        <TextView
            android:id="@+id/tv_radii_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="张三"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_radii_point"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/margin_size_8dp"
        android:textColor="@color/font_orange" />

    <TextView
        android:id="@+id/tv_radii_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/margin_size_8dp"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/iv_radii_give"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/margin_size_8dp"
        android:src="@drawable/zx" />
</LinearLayout>